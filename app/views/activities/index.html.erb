<!DOCTYPE html>
<html>
<head>

  <title>Move and Groove</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>
<body>
<p id="notice"><%= notice %></p>
<div class="btn-new-activity">
  
   <a href="/activities/new">
    <section class="svg-container"> 
  <svg class="circle" xmlns="http://www.w3.org/2000/svg">
    <g>
      <ellipse class="background" ry="30" rx="30" cy="31.25" cx="31.25" stroke-width="2"/>
      <ellipse class="foreground" ry="30" rx="30" cy="31.25" cx="31.25" stroke-width="2"/>
      <line class="line line1" x1="26" y1="31" x2="37" y2="31" />
      <line class="line line2" x1="26" y1="31" x2="37" y2="31" />
    </g>
  </svg>
</section> 
</a>
</div>

<%= form_with model: @activity, url: activities_path, method: :get, local: true do |form| %>
<div class="filter_form">
<%= form.select :keyword,
 [ 
  ['No filter', '0'],
  ['Per date (Asc)', '1'],
  ['Per date (Desc)', '2'],
  ['Fitness', '3'],
  ['Running', '4'],
  ['Dance', '5'],
  ['Walking', '6'],
  ['Cycling', '7'],
  ['Skating', '8'],
  ['Strength training', '9'],
  ['Rowing', '10'],
  ['Hiking', '11'],
  ['Mountain biking', '12'],
  ['Warm-up', '13'],


] %>

<%= form.submit 'start'%>
</div>
<% end %>
  <div class="activity-ctn">
  <div class="activity-card">  
    <% @activities.each do |activity| %>
    <div class="card-text">
      <span class="actvity-card-date">Date: <%= activity.date %> - Duration: <%= activity.duration %></span>
    <div class="card-title"><h2><%= activity.title %></h2><div class="card-desc"><%=  activity.description %> 
      </div>
    </div>
    
    <div class="card-stats">
      <div class="stat">
        <div class="value"><%= link_to ' Show ', activity %></div>
      </div>
      <div class="stat">
        <div class="value"><%= link_to ' Edit ', edit_activity_path(activity) %></div>
      </div>
      <div class="stat">
        <div class="value"><%= link_to ' Destroy ', activity, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
    </div>
  </div>
 <% end %> 
</div>
</div>
 </body>
</html>